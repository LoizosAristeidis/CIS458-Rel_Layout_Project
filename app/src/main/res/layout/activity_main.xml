<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/black">

    <Button
            android:id="@+id/redbutton"
            android:text="RED"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/red"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:onClick="redclick">
    </Button>

    <Button
            android:id="@+id/orangebutton"
            android:text="ORANGE"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@color/orange"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:onClick="orangeclick">
    </Button>

    <Button
            android:id="@+id/yellowbutton"
            android:text="YELLOW"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@color/yellow"
            android:layout_marginLeft="695dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:onClick="yellowclick">
    </Button>

    <Button
            android:id="@+id/greenbutton"
            android:text="GREEN"
            android:textColor="@color/black"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@color/green"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="145dp"
            android:textSize="18dp"
            android:onClick="greenclick">
    </Button>

    <Button
            android:id="@+id/bluebutton"
            android:text="BLUE"
            android:textColor="@color/black"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@color/blue"
            android:layout_marginLeft="345dp"
            android:layout_marginTop="145dp"
            android:textSize="18dp"
            android:onClick="blueclick">
    </Button>

    <Button
            android:id="@+id/indigobutton"
            android:text="INDIGO"
            android:textColor="@color/black"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@color/indigo"
            android:layout_marginLeft="475dp"
            android:layout_marginTop="145dp"
            android:textSize="18dp"
            android:onClick="indigoclick">
    </Button>

    <Button
            android:id="@+id/violetbutton"
            android:text="VIOLET"
            android:textColor="@color/black"
            android:layout_width="900dp"
            android:layout_height="100dp"
            android:background="@color/violet"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="280dp"
            android:layout_marginRight="5dp"
            android:textSize="18dp"
            android:onClick="violetclick">
    </Button>

</RelativeLayout>